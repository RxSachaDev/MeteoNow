<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #C3B299;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meteonow.controller.MainController">
   <VBox alignment="TOP_CENTER" prefHeight="516.0" prefWidth="600.0" spacing="20.0" AnchorPane.topAnchor="50.0">
      <children>
         <Label text="METEO">
            <font>
               <Font name="System Bold" size="50.0" />
            </font>
         </Label>
         <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
               <TextField fx:id="findCity" maxWidth="200.0" prefWidth="200.0" promptText="Rechercher une ville.." />
               <Button mnemonicParsing="false" onAction="#handleEnterCity" text="Ok" />
            </children>
         </HBox>
         <AnchorPane fx:id="cityContainer" prefHeight="200.0" prefWidth="200.0">
            <children>
                <fx:include fx:id="cityView" source="city_view.fxml" />
            </children>
         </AnchorPane>
      </children>
   </VBox>
</AnchorPane>
