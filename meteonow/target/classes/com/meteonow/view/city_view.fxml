<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Regenerated city_view.fxml
     - fx:ids required by CityController: cityLabel, tempLabel, humidityLabel,
       windSpeedLabel, descriptionLabel, errorLabel, iconImage
     - Layout: two panels side-by-side, semi-transparent backgrounds
-->

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meteonow.controller.CityController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Left card: city name, temperature and icon -->
            <VBox fx:id="leftCard" alignment="CENTER" maxHeight="250.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: rgba(202, 202, 202,0.7); -fx-background-radius: 12;">
               <children>
                  <Label fx:id="cityLabel" text="Ville" textFill="WHITE">
                     <font>
                        <Font name="Carlito Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="tempLabel" text="0°C" textFill="WHITE">
                     <font>
                        <Font name="Carlito Regular" size="56.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="iconImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>

            <!-- Right card: details -->
            <VBox fx:id="rightCard" alignment="TOP_LEFT" maxHeight="250.0" prefWidth="300.0" spacing="8.0" style="-fx-background-color: rgba(202, 202, 202,0.7); -fx-background-radius: 12; -fx-padding: 12;">
               <children>
                  <Label text="Description" textFill="WHITE">
                     <font>
                        <Font name="Carlito Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="descriptionLabel" text="--" textFill="WHITE" wrapText="true">
                     <font>
                        <Font name="Carlito Regular" size="20.0" />
                     </font>
                  </Label>

                  <HBox alignment="CENTER_LEFT" spacing="18.0">
                     <children>
                        <VBox spacing="4.0">
                           <children>
                              <Label text="Vent" textFill="WHITE">
                                 <font>
                                    <Font name="Carlito Bold" size="24.0" />
                                 </font>
                              </Label>
                              <Label fx:id="windSpeedLabel" text="0 km/h" textFill="WHITE">
                                 <font>
                                    <Font name="Carlito Regular" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>

                        <VBox spacing="4.0">
                           <children>
                              <Label text="Humidité" textFill="WHITE">
                                 <font>
                                    <Font name="Carlito Bold" size="24.0" />
                                 </font>
                              </Label>
                              <Label fx:id="humidityLabel" text="0%" textFill="WHITE">
                                 <font>
                                    <Font name="Carlito Regular" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <Label fx:id="errorLabel" textFill="#ff6666" wrapText="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
